pkgname=get_iplayer
version=3.36
revision=1
short_desc="Allows you to download or stream any iPlayer programme from the BBC in H.264 (Quicktime/mp4) format, any radio programmes in MP3 or RealAudio format"
url="https://github.com/get-iplayer/get_iplayer/"
license='GPL3'
depends='perl>=5.10.1 perl-JSON perl-LWP-Protocol-https perl-XML-LibXML perl-Mojolicious atomicparsley ffmpeg perl-CGI'
distfiles="https://github.com/get-iplayer/get_iplayer/archive/refs/tags/v${version}.tar.gz"
checksum='9a70383143b6e3f43ee079f551b7f5719037ada86eb48d9defc66e00e619d996'
homepage="https://github.com/get-iplayer/get_iplayer/"

do_install() {
    install -m755 -D get_iplayer $DESTDIR/usr/bin/get_iplayer
    install -m755 -D get_iplayer.cgi $DESTDIR/usr/bin/get_iplayer.cgi

    install -m644 -D README.md $DESTDIR/usr/share/doc/get_iplayer/README.md

    install -D -m644 get_iplayer.1 ${DESTDIR}/usr/share/man/man1/get_iplayer.1
}
