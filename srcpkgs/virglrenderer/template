# Template file for 'virglrenderer'
pkgname=virglrenderer
version=1.0.1
revision=2
build_style=meson
configure_args="-Dvideo=true -Ddrm-asahi-experimental=true -Ddrm-msm-experimental=true"
hostmakedepends="pkg-config"
makedepends="libepoxy-devel MesaLib-devel libva-devel"
short_desc="Virgl GL renderer library - with Asahi native context"
maintainer="Orphaned <orphan@voidlinux.org>"
license="MIT"
homepage="https://gitlab.freedesktop.org/slp/virglrenderer"
distfiles="https://gitlab.freedesktop.org/slp/virglrenderer/-/archive/909bcc21f44a4c267598d475ac81cb9219602c10/virglrenderer-909bcc21f44a4c267598d475ac81cb9219602c10.tar.gz"
checksum=a00c6b01409abf29a9e5e0fd5001367dbb4e87592a1e358035179d31894c420d

post_install() {
	vlicense COPYING
}

virglrenderer-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
	}
}
